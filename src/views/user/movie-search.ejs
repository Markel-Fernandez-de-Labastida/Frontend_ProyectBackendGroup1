<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieApp - Búsqueda</title>
    <link rel="stylesheet" href="/main.css"> <!-- CSS original sin cambios -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <!-- Título de la aplicación -->
    <div class="brand">MovieApp</div>
    <!-- Formulario de búsqueda -->
    <form action="/search" method="GET" class="search-form">
        <div class="search-container">
            <div class="input-group search-input">
                <input type="text" name="query" placeholder="Nombre de la película" value="<%= '' %>">
            </div>
            <button type="submit" class="btn search-btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>


    <!-- Resultado de búsqueda -->
    <% if (movieResults) { %>
        <section class="movies-container">

            <% for (const movie of movieResults) { %>
                <article class="movie-card">
                    <div class="wrap">
                        <img src="<%= movie.image_url %>" alt="<%= movie.title %>" class="movie-poster">
                    </div>

                    <h2 class="movie-title">
                        <%= movie.title %>
                    </h2>
                </article>
                <% } %>

        </section>

        <% } else { %>
            <div class="movie-card">
                <img src="placeholder.jpg" alt="Película buscada" class="movie-poster">
                <h2 class="movie-title">Película buscada</h2>
            </div>
            <% } %>


</body>

</html>