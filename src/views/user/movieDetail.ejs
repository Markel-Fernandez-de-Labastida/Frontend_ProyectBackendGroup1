<%- include('../templates/header') %>

    <body>
        <main>
            <section class="detail-center">
                <article class="detail-container">
                    <h1>
                        <%= movie.title %>
                    </h1>
                    <div class="movie-image">
                        <img src="<%= movie.image_url%>">
                    </div>
                    <ul>
                        <li><b>Director/a:</b>
                            <%= movie.director %>
                        </li>
                        <li><b>Duración:</b>
                            <%= movie.duration %>
                        </li>
                        <li><b>Año:</b>
                            <%= movie.year_movie %>
                        </li>
                        <li><b>Género:</b>
                            <%= movie.name_genre %>
                        </li>
                        <li><b>Sinopsis:</b>
                            <%= movie.synopsis %>
                        </li>
                    </ul>
                </article>

            </section>
        </main>

    </body>