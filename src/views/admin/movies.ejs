<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="/main.css">
</head>

<body>
    <section>
        <h1>Mis películas</h1>
        <a href="/admin/createMovie" class="btn">Crear película</a>
         
        <% movies.forEach(movie => { %>
            <article class="film-card">
                <div>
                    <img src="<%= movie.image_url %>" class="card-image">
                </div>
                <div class="flex">
                    <ul>
                        <li><%= movie.title %></li>
                        <li><%= movie.duration %></li>
                        <li><%= movie.year_movie %></li>
                        <li><%= movie.director %></li>
                        <li class="synopsis-overflow"><%= movie.synopsis %></li>
                    </ul>
                </div>
                <div class="btn-group">
            <a href="/admin/editMovie/<%= movie.id_movie %>" class="btn">Editar</a>
            <form action="/admin/removeMovie" method="POST">
                <input type="hidden" name="id_movie" value="<%= movie.id_movie %>">
                <button type="submit" class="btn">Eliminar</button>
            </form>
        </div>
            </article>
        <% }) %>
    </section>
</body>

</html>